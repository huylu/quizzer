{
  "extends": "rackt",
  "parser": "babel-eslint",
  "settings": {
    "ecmascript": 6
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "destructuring": true,
    "classes": true,
    "forOf": true,
    "blockBindings": true,
    "arrowFunctions": true,
    "spread": true
  },
  "rules": {
    "valid-jsdoc": 2,
    // Disable until Flow supports let and const
    "indent": 2,
    "func-style": 0,
    "func-names": 0,
    "comma-dangle": 0,
    "no-console": 0,
    "no-param-reassign": 0
  },
  "env": {
    "browser": true
  }
}